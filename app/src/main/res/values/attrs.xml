<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Visualizer -->
    <declare-styleable name="visualizerView">
        <attr name="numColumns" format="integer"/>
        <attr name="renderColor" format="color"/>
        <attr name="renderRange">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
            <enum name="both" value="2"/>
        </attr>
        <attr name="renderType">
            <flag name="bar" value="0x1"/>
            <flag name="pixel" value="0x2"/>
            <flag name="fade" value="0x4"/>
        </attr>
    </declare-styleable>

    <!-- Justified Text View -->
    <declare-styleable name="JustifiedTextView">
        <attr name="text" format="string|reference" localization="suggested"/>
        <attr name="textColor" format="color|reference"/>
        <attr name="backgroundColor" format="color|reference"/>
        <attr name="textSize" format="integer" min="1"/>
    </declare-styleable>
</resources>